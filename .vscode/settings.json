{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "css.validate": false,
  "stylelint.enable": true,

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,

    "**/node_modules": true,
    "**/.nuxt": true,
    "package-lock.json": true,
    ".vscode": true
  }
}
